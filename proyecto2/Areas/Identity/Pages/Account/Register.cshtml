    @page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>


<body class="bg-secondary m-5">
   
    <div class="container d-flex justify-content-center">
        <div class="card p-2 rounded" style="width: 30rem;">
            <h1 class="display-1 text-center text-primary pb-2 pt-3"><a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">!¿Ansks Us?!</a></h1>
            <div class="container-fluid w-75">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">               
                    <h2 class="text-center pb-1">¡Unete a la diversión!</h2>
                    <h5 class="text-center pb-3">Estás a punto de disfrutar de todas las funciones que ofrecemos</h5>
                    <div class="mb-3">
                        <h6>Correo electrónico</h6>
                 <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                
                    </div>
                    <div class="mb-3">
                        <h6>Contraseña</h6>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <h6>Confirmar contraseña</h6>
                      <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center pt-3">
                        <h6>¿Ya tienes una cuenta? ¡Inicia sesión!</h6>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button id="registerSubmit" type="submit" class="btn btn-success me-2">Regístrate</button>
                        <button class="btn btn-primary ms-2"><a asp-area="Identity" asp-page="/Account/Login" class="text-decoration-none text-white">Iniciar sesión</a></button>
                       
                    </div>
                </form>
            </div>
        </div>
    </div>    

   
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
