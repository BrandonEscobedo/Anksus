                for (var i = 0; i < array.length; i++) {
                    var esCorrecta = false;

                    respuestas2.push({ respuesta: array[i], RCorrecta: esCorrecta });
                    textoRespuesta = "";
                }

                $.ajax({
                    url: '/Cuestionarios/CrearRespuesta',
                    type: 'Post',
